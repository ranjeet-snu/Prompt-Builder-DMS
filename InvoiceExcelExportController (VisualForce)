<apex:page controller="InvoiceExcelExportController" 
           contentType="application/vnd.ms-excel#InvoiceExport_{!fileName}.xls" 
           showHeader="false" sidebar="false" standardStylesheets="false" 
           applyHtmlTag="false" applyBodyTag="false">
<head>
<style type="text/css">
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }
    
    .vendor-header {
        background-color: #FFFFFF;
        border: 2px solid #000;
        padding: 5px 10px;
        margin-bottom: 20px;
        font-size: 14px;
        font-weight: bold;
    }
    
    .invoice-card {
        width: 60%;
        border-collapse: collapse;
        margin-bottom: 20px;
        font-size: 11px;
    }
    
    .invoice-card td {
        border: 1px solid #000;
        padding: 6px 10px;
    }
    
    .invoice-card .label-cell {
        background-color: #D3D3D3;
        font-weight: normal;
        width: 40%;
    }
    
    .invoice-card .value-cell {
        background-color: #FFFFFF;
        width: 60%;
    }
    
    .product-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 10px;
        margin-top: 10px;
    }
    
    .product-table th {
        border: 1px solid #000;
        padding: 6px 10px;
        text-align: left;
        background-color: #D3D3D3;
        font-weight: bold;
    }
    
    .product-table td {
        border: 1px solid #000;
        padding: 6px 10px;
        text-align: left;
    }
    
    .gst-summary-row {
        background-color: #F5F5F5;
        font-weight: bold;
    }
    
    .gst-label-cell {
        text-align: right;
        padding-right: 20px;
    }
    
    .section-break {
        page-break-after: always;
    }
</style>
</head>
<body>
    <!-- Loop through each vendor (for separate sheets) -->
    <apex:repeat value="{!vendorSheets}" var="vendor">
        <div class="vendor-header">
            Vendor: {!vendor}
        </div>
        
        <br/>
        
        <!-- Loop through invoices for this vendor -->
        <apex:repeat value="{!invoicesByVendor[vendor]}" var="invoice">
            
            <!-- Invoice Header Card -->
            <table class="invoice-card">
                <tr>
                    <td class="label-cell">Invoice Number</td>
                    <td class="value-cell">{!invoice.invoiceNumber}</td>
                </tr>
                <tr>
                    <td class="label-cell">Invoice Date</td>
                    <td class="value-cell">{!invoice.invoiceDate}</td>
                </tr>
                <tr>
                    <td class="label-cell">Invoice Value</td>
                    <td class="value-cell">{!invoice.invoiceValue}</td>
                </tr>
                <tr>
                    <td class="label-cell">Dealer Enterprise Name</td>
                    <td class="value-cell">{!invoice.dealerName}</td>
                </tr>
                <tr>
                    <td class="label-cell">Subdealer Enterprise Name</td>
                    <td class="value-cell">{!invoice.subdealerName}</td>
                </tr>
                <tr>
                    <td class="label-cell">Subdealer GST Number</td>
                    <td class="value-cell">{!invoice.subdealerGST}</td>
                </tr>
            </table>
            
            <br/>
            
            <!-- Product Details Table - DYNAMIC COLUMNS -->
            <table class="product-table">
                <thead>
                    <tr>
                        <th style="width: 5%; text-align: center;">S.No</th>
                        <!-- Dynamic column headers based on visibleColumns -->
                        <apex:repeat value="{!invoice.visibleColumns}" var="colName">
                            <th>{!CASE(colName,
                                'productName', 'Product Name',
                                'hsnSac', 'HSN/SAC',
                                'quantity', 'Quantity',
                                'quantityUnit', 'Unit',
                                'unitPrice', 'Unit Price',
                                'rateUnit', 'Rate Unit',
                                'discountPercent', 'Discount %',
                                'additionalDiscountPercent', 'Add. Discount %',
                                'taxPercent', 'Tax %',
                                'taxAmount', 'Tax Amount',
                                'lineAmount', 'Line Amount',
                                colName)}</th>
                        </apex:repeat>
                    </tr>
                </thead>
                <tbody>
                    <!-- Product Rows -->
                    <apex:variable var="rowNum" value="{!0}" />
                    <apex:repeat value="{!invoice.productLines}" var="product">
                        <apex:variable var="rowNum" value="{!rowNum + 1}" />
                        <tr>
                            <td style="text-align: center;">{!rowNum}</td>
                            <!-- Dynamic data cells based on visibleColumns -->
                            <apex:repeat value="{!invoice.visibleColumns}" var="colName">
                                <td>{!CASE(colName,
                                    'productName', product.productName,
                                    'hsnSac', product.hsnSac,
                                    'quantity', product.quantity,
                                    'quantityUnit', product.quantityUnit,
                                    'unitPrice', product.unitPrice,
                                    'rateUnit', product.rateUnit,
                                    'discountPercent', product.discountPercent,
                                    'additionalDiscountPercent', product.additionalDiscountPercent,
                                    'taxPercent', product.taxPercent,
                                    'taxAmount', product.taxAmount,
                                    'lineAmount', product.lineAmount,
                                    '')}</td>
                            </apex:repeat>
                        </tr>
                    </apex:repeat>
                    
                    <!-- NEW: GST Summary Section -->
                    <apex:outputPanel rendered="{!invoice.gstSummary != null}">
                        <!-- Empty row for spacing -->
                        <tr>
                            <td colspan="{!invoice.visibleColumns.size + 1}" style="border: none; height: 10px;"></td>
                        </tr>
                        
                        <!-- Find the index of taxPercent/discountPercent (Rate column) and lineAmount columns -->
                        <apex:variable var="rateColIndex" value="{!0}" />
                        <apex:variable var="amountColIndex" value="{!0}" />
                        <apex:variable var="colIndex" value="{!0}" />
                        
                        <apex:repeat value="{!invoice.visibleColumns}" var="col">
                            <apex:variable var="colIndex" value="{!colIndex + 1}" />
                            <apex:outputPanel rendered="{!OR(col == 'taxPercent', col == 'discountPercent')}">
                                <apex:variable var="rateColIndex" value="{!colIndex}" />
                            </apex:outputPanel>
                            <apex:outputPanel rendered="{!col == 'lineAmount'}">
                                <apex:variable var="amountColIndex" value="{!colIndex}" />
                            </apex:outputPanel>
                        </apex:repeat>
                        
                        <!-- SGST Row -->
                        <apex:outputPanel rendered="{!invoice.gstSummary.hasSgst}">
                            <tr class="gst-summary-row">
                                <td colspan="{!rateColIndex}" class="gst-label-cell">SGST Sales</td>
                                <td>{!invoice.gstSummary.sgstPercent}</td>
                                <apex:variable var="remainingCols" value="{!amountColIndex - rateColIndex - 1}" />
                                <apex:outputPanel rendered="{!remainingCols > 0}">
                                    <td colspan="{!remainingCols}"></td>
                                </apex:outputPanel>
                                <td>{!invoice.gstSummary.sgstAmount}</td>
                            </tr>
                        </apex:outputPanel>
                        
                        <!-- CGST Row -->
                        <apex:outputPanel rendered="{!invoice.gstSummary.hasCgst}">
                            <tr class="gst-summary-row">
                                <td colspan="{!rateColIndex}" class="gst-label-cell">CGST Sales</td>
                                <td>{!invoice.gstSummary.cgstPercent}</td>
                                <apex:variable var="remainingCols" value="{!amountColIndex - rateColIndex - 1}" />
                                <apex:outputPanel rendered="{!remainingCols > 0}">
                                    <td colspan="{!remainingCols}"></td>
                                </apex:outputPanel>
                                <td>{!invoice.gstSummary.cgstAmount}</td>
                            </tr>
                        </apex:outputPanel>
                        
                        <!-- Round Off Row -->
                        <apex:outputPanel rendered="{!invoice.gstSummary.hasRoundOff}">
                            <tr class="gst-summary-row">
                                <td colspan="{!rateColIndex}" class="gst-label-cell">Round Off</td>
                                <td></td>
                                <apex:variable var="remainingCols" value="{!amountColIndex - rateColIndex - 1}" />
                                <apex:outputPanel rendered="{!remainingCols > 0}">
                                    <td colspan="{!remainingCols}"></td>
                                </apex:outputPanel>
                                <td>{!invoice.gstSummary.roundOff}</td>
                            </tr>
                        </apex:outputPanel>
                        
                        <!-- Final Invoice Value Row -->
                        <apex:outputPanel rendered="{!invoice.gstSummary.hasFinalValue}">
                            <tr class="gst-summary-row">
                                <td colspan="{!rateColIndex}" class="gst-label-cell">Final Invoice Value</td>
                                <td></td>
                                <apex:variable var="remainingCols" value="{!amountColIndex - rateColIndex - 1}" />
                                <apex:outputPanel rendered="{!remainingCols > 0}">
                                    <td colspan="{!remainingCols}"></td>
                                </apex:outputPanel>
                                <td>{!invoice.gstSummary.finalInvoiceValue}</td>
                            </tr>
                        </apex:outputPanel>
                    </apex:outputPanel>
                </tbody>
            </table>
            
            <br/><br/>
        </apex:repeat>
        
        <div class="section-break"></div>
    </apex:repeat>
</body>
</apex:page>
                
